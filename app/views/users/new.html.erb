<h3>Add User</h3>
<%= form_for(@user) do |f| %>
  <%= error_messages_for @user %>
  <div><%= f.label :name %><br />
  <%= f.text_field :name, :placeholder => "Name" %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name, :placeholder => "Last Name" %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

<div><%= f.label :title %><br />
  <%= f.text_field :title, :placeholder => "Title" %></div>


<div><%= f.label :company %><br />
  <%= f.text_field :company, :placeholder => "Company" %></div>

<div><%= f.label :bio %><br />
  <%= f.text_field :bio , :placeholder => "Bio" %></div>


  <div><%= f.label :password %><br />
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>


<div><%= f.label :sex %><br />
	<%= f.select(:sex, [["Male", "male"], ["Female", "female"]]) %>
</div>


 <div><%= f.label :status  %><br />
  <%= f.select(:status, User::USER_STATUS) %>
</div>

<div><%= f.label :avatar %><br />
  <%= f.file_field :avatar %></div>

<br>

  <div><%= f.submit "Sign up" %></div>
<% end %>
